<?xml version="1.0" encoding="utf-8" ?>
<baseviews:ViewBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:baseviews="clr-namespace:ERP.MVVM.Views.Base"
             xmlns:viewmodels="clr-namespace:ERP.MVVM.ViewModels"
             x:TypeArguments="viewmodels:LoginPageViewModel"
             x:Class="ERP.MVVM.Views.LoginPage">

    <baseviews:ViewBase.PageContent>
        <Grid RowDefinitions=".8*,.2*">
            <Image
            Grid.Row="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="300"
            Source="gordian_logo.png" />


            <Button 
            Grid.Row="1"
            Text="LOGIN"             
            Margin="0,0,0,80"
            BackgroundColor="#1A5EA2"
            VerticalOptions="EndAndExpand"
            HorizontalOptions="Center"
            HeightRequest="40"
            WidthRequest="190"
            CornerRadius="20"
            TextColor="White"
            Command="{Binding LoginCommand}"/>

        </Grid>
    </baseviews:ViewBase.PageContent>

    
</baseviews:ViewBase>