<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ERP.ViewModels"
             x:Class="ERP.Views.ProductDetailsPage"
             x:DataType="viewmodels:ProductDetailsViewModel"
             Title="{Binding Title}">
    <ScrollView>
        <StackLayout>
            <Label HorizontalTextAlignment="Center" FontSize="Header" Padding="20" Text="{Binding Product.Title}"/>
            <Image Source="{Binding Product.Image}"/>
            <Label FontSize="Body" Padding="20" Text="{Binding Product.Description}"/>
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Margin="20">
                <Label FontSize="Large" Text="$"/>
                <Label FontSize="Large" Text="{Binding Product.Price}" />
            </HorizontalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>