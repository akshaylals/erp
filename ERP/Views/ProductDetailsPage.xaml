<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ERP.ViewModels"
             x:Class="ERP.Views.ProductDetailsPage"
             x:DataType="viewmodels:ProductDetailsViewModel"
             Title="{Binding Product.Title}">
    <VerticalStackLayout>
        <Image Aspect="AspectFill" Source="{Binding Product.Image}"
                                       WidthRequest="125"
                                       HeightRequest="125"/>
        <Label Text="{Binding Product.Description}"/>
    </VerticalStackLayout>
</ContentPage>