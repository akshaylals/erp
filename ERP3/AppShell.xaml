<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:ERP3.Views"
            x:Class="ERP3.AppShell"
            BarBackgroundColor="White"
            SelectedTabColor="#B91212">

    <NavigationPage Title="Search" IconImageSource="ic_search.png">
        <x:Arguments>
            <views:ProductsPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Estimate" IconImageSource="ic_estimation.png">
        <x:Arguments>
            <views:EstimatePage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Settings" IconImageSource="ic_settings.png">
        <x:Arguments>
            <views:SettingsPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Profile" IconImageSource="ic_menu.png">
        <x:Arguments>
            <views:Menu />
        </x:Arguments>
    </NavigationPage>
</TabbedPage>