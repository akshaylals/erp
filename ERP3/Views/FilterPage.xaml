            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <HorizontalStackLayout>
                        <RadioButton Content="{Binding .}" 
                                     CheckedChanged="RadioChanged" 
                                     GroupName="radioFilter"
                                     />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
           
        </CollectionView>-->
    </baseviews:ViewBase.PageContent>
    
</baseviews:ViewBase>

