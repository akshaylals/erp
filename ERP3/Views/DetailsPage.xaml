<?xml version="1.0" encoding="utf-8" ?>
<baseviews:ViewBase
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:baseviews="clr-namespace:ERP3.Views.Base"
    xmlns:viewmodels="clr-namespace:ERP3.ViewModels"
    xmlns:models="clr-namespace:ERP3.Models"
    xmlns:controls="clr-namespace:ERP3.ViewControls"
    x:Class="ERP3.Views.DetailsPage"
    x:TypeArguments="viewmodels:DetailsPageViewModel"
    x:DataType="viewmodels:DetailsPageViewModel"
    PageTitle="{Binding Title, Mode=OneWay}"
    PageMode="Navigate"
    ContentDisplayMode="NavigationBar"
    x:Name="DetailsPg">

    <baseviews:ViewBase.PageContent>
        <VerticalStackLayout IsVisible="{Binding DataLoaded, Mode=OneWay}">
            <Image Source="{Binding Product.Image}" HeightRequest="500" WidthRequest="300"/>
            <Label FontSize="Body" Padding="20" Text="{Binding Product.Description}"/>
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Margin="20">
                <Label FontSize="Large" Text="$"/>
                <Label FontSize="Large" Text="{Binding Product.Price}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </baseviews:ViewBase.PageContent>

</baseviews:ViewBase>